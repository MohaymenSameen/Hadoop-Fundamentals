ordersCSV = LOAD '/user/maria_dev/diplomacy/orders.csv'
USING PigStorage(',')
AS
	(game_id:chararray,
     unit_id:chararray,
     unit_order:chararray,
     location:chararray,
     target:chararray,
     target_dest:chararray,
     success:chararray,
     reason:chararray,
     turn_num:chararray);

foreach_data = FOREACH ordersCSV GENERATE game_id,location,target,turn_num;

filtered = FILTER foreach_data BY target == '"Holland"';
group_data = GROUP filtered BY (location, target);
ordered = ORDER group_data BY group ASC;
for_each = FOREACH ordered GENERATE FLATTEN(group) AS (location,target), COUNT($1);


DUMP for_each;